generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  settings UserSettings?
}

model UserSettings {
  id            Int    @id @default(autoincrement())
  userId        Int    @unique
  twitchChannel String
  kickChannel   String

  user User @relation(fields: [userId], references: [id])
}
